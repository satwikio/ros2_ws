<?xml version='1.0'?>

<robot name="minimal_diff_drive_robot">

<!-- Determine the name of the robot's root link -->
  <link name="base_footprint"></link>

  <joint name="base_footprint_joint" type="fixed">
    <origin xyz="0 0 0.10" rpy="0 0 0" />
    <parent link="base_footprint"/>
    <child link="base_link" />
  </joint>

  <link name='base_link'>
    <pose>0 0 0 0 0 0</pose>

    <inertial>
      <mass value="15.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <box size=".4 .2 .12"/>
      </geometry>
    </collision>

    <visual name='base_link_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size=".4 .2 .08"/>
      </geometry>
    </visual>

    <collision name='back_caster_collision'>
      <origin xyz="-0.15 0 -0.09" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.0499"/>
      </geometry>
    </collision>

    <visual name='back_caster_visual'>
      <origin xyz="-0.15 0 -0.09" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </visual>

    <collision name='front_caster_collision'>
      <origin xyz="0.15 0 -0.09" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.0499"/>
      </geometry>
    </collision>

    <visual name='front_caster_visual'>
      <origin xyz="0.15 0 -0.09" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </visual>

  </link>

<joint type="continuous" name="left_wheel_hinge">
    <origin xyz="0 0.15 -0.04" rpy="0 0 0"/>
    <child link="left_wheel"/>
    <parent link="base_link"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

<link name='left_wheel'>
    <pose>0 0 0.1 0 0 0</pose>

    <inertial>
      <mass value="5.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 1.5707 1.5707"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='left_wheel_collision'>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </collision>

    <visual name='left_wheel_visual'>
      <origin xyz="0.0 0 0" rpy=" 0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </visual>
  </link>

<joint type="continuous" name="right_wheel_hinge">
    <origin xyz="0 -0.15 -0.04" rpy="0 0 0"/>
    <child link="right_wheel"/>
    <parent link="base_link"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

<link name='right_wheel'>
    <pose>0 0 0.1 0 0 0</pose>

    <inertial>
      <mass value="5.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 1.5707 1.5707"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='right_wheel_collision'>
      <origin xyz="0.0 0 0" rpy=" 0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </collision>

    <visual name='right_wheel_visual'>
      <origin xyz="0.0 0 0" rpy=" 0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </visual>
  </link>

   <link name="camera">
      <inertial>
         <mass value="0.1" />
         <origin xyz="0.0 0 0" rpy="0 0 0" />
         <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001" />
      </inertial>
      <collision name="camera_collision">
         <origin xyz="0.0 0 0" rpy="0 0 0" />
         <geometry>
            <box size="0.02 0.05 0.05" />
         </geometry>
      </collision>
      <visual name="camera_visual">
         <origin xyz="0 0 0" rpy="0 0 0" />
         <geometry>
            <box size="0.02 0.05 0.05" />
         </geometry>
      </visual>
   </link>

   <joint type="fixed" name="camera_joint">
      <!-- Determine offset distance and orientation with respect to the parent link -->
      <origin xyz="0.21 0.0 0.02" rpy="0 0 0" />
      <child link="camera" />
      <parent link="base_link" />
   </joint>

   <link name="camera_tf_frame" />
   <joint name="camera_tf_frame_joint" type="fixed">
      <!-- Determine offset distance and orientation with respect to the parent link -->
      <origin xyz="0.21 0.0 0.02" rpy="1.57079 3.14159 1.57079" />
      <parent link="base_link" />
      <child link="camera_tf_frame" />
   </joint>

   <gazebo>
    <plugin filename="libgazebo_ros_diff_drive.so" name="differential_drive_controller">
      <ros>
          <namespace></namespace>
          <remapping>/cmd_vel:=/robot1/cmd_vel</remapping>
          <remapping>/odom:=odom</remapping>
      </ros>
      <always_on>true</always_on>
      <update_rate>40</update_rate>
      <!-- Wheel joints -->
      <left_joint>left_wheel_hinge</left_joint>
      <right_joint>right_wheel_hinge</right_joint>
      <!-- Kinematics -->
      <wheel_separation>0.235</wheel_separation>
      <wheel_diameter>0.2</wheel_diameter>
      <publish_odom>true</publish_odom>
      <!-- TF frames -->
      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>base_footprint</robot_base_frame>
      <publish_odom_tf>true</publish_odom_tf>
      <publish_wheel_tf>true</publish_wheel_tf>
      <!-- Limits -->
      <max_wheel_torque>1.0</max_wheel_torque>
      <max_wheel_acceleration>2.0</max_wheel_acceleration>

    </plugin>
  </gazebo>

  <gazebo reference="left_wheel_link">
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <minDepth>0.001</minDepth>
    <maxVel>1.0</maxVel>
  </gazebo>
  <gazebo reference="right_wheel_link">
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <minDepth>0.001</minDepth>
    <maxVel>1.0</maxVel>
  </gazebo>

  <!-- multi camera plugin -->
  <gazebo>
    <model name="camera_model">
      <pose>0 0 0.5 0 0 3.14</pose>
      <static>true</static>
      <link name="camera_tf_frame">
        <sensor type="multicamera" name="camera1">
          <pose>0 -0.2 0 0 0 0</pose>
          <update_rate>60</update_rate>
          <visualize>true</visualize>
          <camera name="left">
            <horizontal_fov>1.3962634</horizontal_fov>
            <image>
              <width>640</width>
              <height>480</height>
              <format>R8G8B8</format>
            </image>
            <clip>
              <near>0.02</near>
              <far>300</far>
            </clip>
            <noise>
              <type>gaussian</type>
              <!-- Noise is sampled independently per pixel on each frame.
                   That pixel's noise value is added to each of its color
                   channels, which at that point lie in the range [0,1]. -->
              <mean>0.0</mean>
              <stddev>0.007</stddev>
            </noise>
          </camera>
          <camera name="right">
            <pose>0 0.4 0 0 0 0</pose>
            <horizontal_fov>1.3962634</horizontal_fov>
            <image>
              <width>640</width>
              <height>480</height>
              <format>R8G8B8</format>
            </image>
            <clip>
              <near>0.02</near>
              <far>300</far>
            </clip>
            <noise>
              <type>gaussian</type>
              <!-- Noise is sampled independently per pixel on each frame.
                   That pixel's noise value is added to each of its color
                   channels, which at that point lie in the range [0,1]. -->
              <mean>0.0</mean>
              <stddev>0.007</stddev>
            </noise>
          </camera>
          <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
            <ros>
              <!--namespace>demo_ns</namespace-->
              <!-- topics need to be prefixed with camera_name for remapping -->
              <!--remapping>my_camera/left/image_raw:=my_camera/left/image_demo</remapping>
              <remapping>my_camera/right/image_raw:=my_camera/right/image_demo</remapping>
              <remapping>my_camera/left/camera_info:=my_camera/left/camera_info_demo</remapping>
              <remapping>my_camera/right/camera_info:=my_camera/right/camera_info_demo</remapping-->
            </ros>

            <camera_name>my_camera</camera_name>
            <!-- Set to true to turn on triggering -->
            <triggered>true</triggered>
            <!-- frame_name>omit so it defaults to link name</frame_name-->
          </plugin>
        </sensor>
      </link>
    </model>
  </gazebo>
  <!-- end multicamera model/plugin -->

<!-- Colors -->

  <!-- base_link color -->
  <gazebo reference="base_link">
    <material>Gazebo/Blue</material>
  </gazebo>
  <!-- camera color -->
  <gazebo reference="camera">
    <material>Gazebo/Black</material>
  </gazebo>

  <!-- left_wheel color -->
  <gazebo reference="left_wheel">
    <material>Gazebo/Red</material>
  </gazebo>

  <!-- right_wheel color -->
  <gazebo reference="right_wheel">
    <material>Gazebo/Green</material>
  </gazebo>
  
</robot>
